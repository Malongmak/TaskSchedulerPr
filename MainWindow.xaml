<Window x:Class="TaskSchedulerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:TaskSchedulerDemo.Converters"
        Title="BSC Task Scheduler" Height="750" Width="800"
        Background="#FFF8E7" Foreground="#333333">

    <Window.Resources>
        <converters:BooleanToBrushConverter x:Key="BoolToBackgroundConverter"/>
        <converters:BooleanToHorizontalAlignmentConverter x:Key="BoolToAlignmentConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Class Task Scheduler"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#8B4513"
                   Margin="0,0,0,20"/>

        <!-- FIXED INPUT SECTION -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">

            <TextBox x:Name="TaskNameInput"
                     Width="200"
                     Padding="5"
                     Margin="0,0,10,0"
                     Tag="Task Name"
                     Background="#FFFFFF"
                     Foreground="#333333"
                     BorderBrush="#D4A574"
                     BorderThickness="1"/>

            <TextBox x:Name="DurationInput"
                     Width="100"
                     Padding="5"
                     Margin="0,0,10,0"
                     Tag="Duration (sec)"
                     Background="#FFFFFF"
                     Foreground="#333333"
                     BorderBrush="#D4A574"
                     BorderThickness="1"/>

            <Button Content="Schedule Task"
                    Click="AddAndRun_Click"
                    Background="#8B4513"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"/>

            <Button Content="Clear Completed"
                    Click="ClearList_Click"
                    Margin="10,0,0,0"
                    Background="#A0522D"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"/>
        </StackPanel>

        <ListView x:Name="TaskListView"
                  Grid.Row="2"
                  Background="#FFFFFF"
                  BorderThickness="1"
                  BorderBrush="#D4A574"
                  Foreground="#333333">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFF8DC"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,5"
                            BorderBrush="#D4A574"
                            BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Status}" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <ProgressBar Grid.Column="1"
                                         Value="{Binding Progress}"
                                         Maximum="100"
                                         Height="10"
                                         Margin="10,0"
                                         Background="#F5DEB3"
                                         Foreground="#8B4513"
                                         BorderBrush="#D4A574"/>

                            <TextBlock Grid.Column="2"
                                       Text="{Binding DurationSeconds, StringFormat='Duration: {0}s'}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>

                            <Button Grid.Column="3"
                                    Content="Cancel"
                                    Click="CancelTask_Click"
                                    Tag="{Binding}"
                                    Background="#CD853F"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="10,5"/>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- AI CHATBOT SECTION -->
        <Border Grid.Row="3" 
                Background="#FFFFFF" 
                BorderBrush="#D4A574" 
                BorderThickness="1" 
                CornerRadius="10" 
                Margin="0,10,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="🤖 AI Task Assistant" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#8B4513" 
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" 
                              x:Name="ChatScrollViewer" 
                              VerticalScrollBarVisibility="Auto" 
                              Background="#FFF8DC">
                    <ItemsControl x:Name="ChatMessagesControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="8" 
                                        CornerRadius="8" 
                                        Background="{Binding IsUser, Converter={StaticResource BoolToBackgroundConverter}}"
                                        HorizontalAlignment="{Binding IsUser, Converter={StaticResource BoolToAlignmentConverter}}">
                                    <TextBlock Text="{Binding Message}" 
                                               Foreground="#333333" 
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            Margin="0,10,0,0">
                    <TextBox x:Name="ChatInput" 
                             Width="600" 
                             Height="30" 
                             Padding="5" 
                             Background="#FFFFFF" 
                             Foreground="#333333" 
                             BorderBrush="#D4A574" 
                             BorderThickness="1"
                             KeyDown="ChatInput_KeyDown"/>
                    <Button Content="Send" 
                            Click="SendChatMessage_Click" 
                            Background="#8B4513" 
                            Foreground="White" 
                            Padding="15,5" 
                            Margin="10,0,0,0" 
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
